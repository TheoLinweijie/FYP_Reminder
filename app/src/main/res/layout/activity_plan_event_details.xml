<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanEventDetailsActivity">
    <include
        layout="@layout/layout_app_bar"
        android:id="@+id/plan_details_toolbar">

    </include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/plan_details_toolbar"
        android:id="@+id/text_title"
        android:text="Title"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/add_plan_title"
        android:layout_below="@id/text_title"
        android:inputType="textMultiLine"
        android:hint="What You Wanna Do?"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input2"
        android:padding="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/add_plan_title"
        android:id="@+id/text_description"
        android:text="Description"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/add_plan_description"
        android:layout_below="@id/text_description"
        android:inputType="textMultiLine"
        android:hint="How Do You Do That?"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input2"
        android:padding="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/add_plan_description"
        android:id="@+id/text_timeline"
        android:text="Timeline"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/add_plan_timeline"
        android:layout_below="@id/text_timeline"
        android:inputType="textMultiLine"
        android:hint="When Will You Finish it?"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input2"
        android:padding="5dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/save_update"
        android:layout_below="@id/add_plan_timeline"
        android:text="Save Update"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button2"
        android:padding="5dp"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/delete"
        android:layout_below="@id/save_update"
        android:text="Delete"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button2"
        android:padding="5dp"
        android:textSize="20dp"
        />
</RelativeLayout>