<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInspirationActivity">
    <include
        layout="@layout/layout_app_bar"
        android:id="@+id/add_inspiration_toolbar">

    </include>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/add_inspiration_title"
        android:layout_below="@id/add_inspiration_toolbar"
        android:inputType="textMultiLine"
        android:hint="Title"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/input2"
        android:padding="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/add_inspiration_description"
        android:layout_below="@id/add_inspiration_title"
        android:inputType="textMultiLine"
        android:hint="Input Content"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/input2"
        android:padding="5dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/save_change"
        android:layout_below="@id/add_inspiration_description"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/button"
        android:padding="5dp"
        android:textSize="22dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/cancel"
        android:layout_below="@id/save_change"
        android:text="Cancel"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button2"
        android:padding="5dp"
        android:textSize="22dp"
        />

</RelativeLayout>